<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/li"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="5"
    tools:context=".HomeScreen" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.10"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_weight="0.51"
        android:orientation="vertical" >

        <Button
            android:id="@+id/expenses"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_above="@+id/services"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:onClick="addOutlay"
            android:background="@drawable/tite" />

        <Button
            android:id="@+id/new_user"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_above="@+id/expenses"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:onClick="adduser"
            android:background="@drawable/neww" />

        <Button
            android:id="@+id/services"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:background="@drawable/titww" />

    </RelativeLayout>

</LinearLayout>
